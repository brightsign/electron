+QuotaAvailability QuotaManagerImpl::GetVolumeInfo(
+    const base::FilePath& path,
+    const absl::optional<int>& quota_size) {
+  if (!quota_size) {
+    return QuotaAvailability(base::SysInfo::AmountOfTotalDiskSpace(path),
